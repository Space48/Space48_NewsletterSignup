<?xml version="1.0"?>
<config>
    <sections>
        <newsletter>
            <groups>
                <space48_newslettersignup translate="label" module="space48_newslettersignup">
                    <label>Newsletter Signup Checkbox in Checkout</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <checked translate="label">
                            <label>Checked by default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set if the checkbox is checked by default on page load.</comment>
                        </checked>
                    </fields>
                </space48_newslettersignup>
            </groups>
        </newsletter>
    </sections>
</config>